{
    "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
    "changelog-sections": [
      {
        "section": "🎉 Features",
        "type": "feat"
      },
      {
        "section": "🐛 Bug Fixes",
        "type": "fix"
      },
      {
        "section": "⚡ Performance Improvements",
        "type": "perf"
      },
      {
        "section": "🔗 Dependencies",
        "type": "deps"
      },
      {
        "section": "📝 Documentation",
        "type": "docs"
      },
      {
        "section": "🏗️ Build System",
        "type": "build"
      },
      {
        "section": "🤖 Continuous Integration",
        "type": "ci"
      },
      {
        "section": "🔧 Miscellaneous Chores",
        "type": "chore"
      },
      {
        "section": "⏪ Reverts",
        "type": "revert"
      },
      {
        "section": "✅ Tests",
        "type": "test"
      },
      {
        "section": "💄 Style",
        "type": "style"
      },
      {
        "section": "♻️ Code Refactoring",
        "type": "refactor"
      }
    ],
    "draft-pull-request": true,
    "include-v-in-tag": true,
    "packages": {
      "actions/artifactory-login": {
        "package-name": "artifactory-login",
        "extra-files": ["README.md"]
      },
      "actions/build-and-push-docker": {
        "package-name": "build-and-push-docker",
        "extra-files": ["README.md"]
      },
      "actions/build-and-push-helm": {
        "package-name": "build-and-push-helm",
        "extra-files": ["README.md"]
      },
      "actions/helm-lint": {
        "package-name": "helm-lint",
        "extra-files": ["README.md"]
      },
      "actions/npm-publish": {
        "package-name": "npm-publish",
        "extra-files": ["README.md"]
      },
      "actions/update-artifacts-file": {
        "package-name": "update-artifacts-file",
        "extra-files": ["README.md"]
      }
    },
    "release-type": "simple",
    "separate-pull-requests": true
  }